<Window x:Class="klient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="LoginWindow" Visibility="Collapsed">
            <TextBox Name="LoginBox" HorizontalAlignment="Left" Height="26" Margin="169,97,0,0" TextWrapping="Wrap" Text="Name" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="120"/>
            <Label Content="Login" HorizontalAlignment="Left" Margin="88,97,0,0" VerticalAlignment="Top"/>
            <Label Content="Password:" HorizontalAlignment="Left" Margin="88,149,0,0" VerticalAlignment="Top"/>
            <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="169,149,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="120" Height="26"/>
            <Button Name="LogInButton" Content="Log In" HorizontalAlignment="Left" Margin="214,242,0,0" VerticalAlignment="Top" Width="75" Click="LogIn_Click"/>
            <ComboBox Name="RoleBox" HorizontalAlignment="Left" Margin="169,203,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Role:" HorizontalAlignment="Left" Height="26" Margin="88,203,0,0" VerticalAlignment="Top" Width="62"/>
        </Grid>
        <Grid Name="StudentWindow" Visibility="Collapsed">
            <Label Name="StudentNameLabel" HorizontalAlignment="Left" Margin="88,97,0,0" VerticalAlignment="Top"/>
            <Label Name="StudentFornameLabel" HorizontalAlignment="Left" Margin="88,149,0,0" VerticalAlignment="Top"/>
            <Button Name="StudentLogOutButton" Click="StudentLogOutButton_Click" Content="Log out" HorizontalAlignment="Left" Height="26" Margin="88,203,0,0" VerticalAlignment="Top" Width="62" />
        </Grid>
        <Grid Name="AdministratorWindow" Visibility="Visible">
            <Label Content="Wybor karty:" HorizontalAlignment="Left" Margin="22,37,0,0" VerticalAlignment="Top" Width="120"/>
            <ComboBox Name="AdminPagesBox" HorizontalAlignment="Left" Margin="22,63,0,0" VerticalAlignment="Top" Width="120"/>
            <Grid Name="UsersPage" Margin="161,0,0.4,-0.2" Visibility="Visible">
                <DataGrid />
                <Button Name="AddUserButton" Content="Add User" HorizontalAlignment="Left" Margin="-136,104,0,0" VerticalAlignment="Top" Width="75" Click="AddUser_Click"/>
                <Button Name="RemoveUserButton" Content="Remove User" HorizontalAlignment="Left" Margin="-136,154,0,0" VerticalAlignment="Top" Width="75" Click="RemoveUser_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
